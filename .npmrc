# Enable strict peer dependencies
strict-peer-dependencies=false

# Use hard links when possible
link-workspace-packages=true
prefer-workspace-packages=true

# Enable shamefully-hoist for compatibility
shamefully-hoist=true

# Prevent node_modules in workspace packages - install everything at root
node-linker=hoisted

# Enable workspace features
shared-workspace-lockfile=true

# Prevent subproject node_modules installation
package-import-method=hardlink